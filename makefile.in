SHELL = /bin/bash

tex = "_build/physik412-$(number)-Ueding_Lemmer.tex"
out = "_build/physik412-$(number)-Ueding_Lemmer.pdf"

all: $(out)

$(out): $(tex)
	cd _build && latexmk -pdflatex='pdflatex -halt-on-error -shell-escape $$O $$S' -pdf $$(basename $<)

$(tex): crunch Template.tex
	mkdir -p _build
	./$< $@

.PHONY: clean
clean:
	$(RM) *.class *.jar
	$(RM) *.o *.out
	$(RM) *.pyc *.pyo
	$(RM) *.orig
	$(RM) -r _build
